{
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "'Hack Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "gitlens.ai.model": "vscode",
  "chat.mcp.gallery.enabled": true,
  "snyk.advanced.cliPath": "/opt/homebrew/bin/snyk",
  "shellcheck.executablePath": "/opt/homebrew/bin/shellcheck",
  "files.autoSave": "onFocusChange",
  "files.associations": {
    "**/dotfiles/vscode/source/*.json": "jsonc"
  },
  "gitlens.currentLine.enabled": true,
  "gitlens.currentLine.style": "grey",
  "workbench.colorCustomizations": {
    "activityBar.background": "#2d2d2d"
  }
}
